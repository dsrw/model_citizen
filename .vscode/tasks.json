{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Current File",
      "command": "nim",
      "args": ["c", "--debugger:native", "--out:${relativeFileDirname}/${fileBasenameNoExtension}.out", "${relativeFile}"],
      "options": {
          "cwd": "${workspaceRoot}"
      },
      "type": "shell",
      "group": {
          "kind": "build",
          "isDefault": true
      }
    }
  ]
}
